@using Microsoft.Extensions.Localization
@{
    //ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";

    IStringLocalizer _localizer = (IStringLocalizer)ViewBag._Localizer;
}
<div class="row" style="background:#f7f1e6;">
    <div class="col-xs-12 text-center lang-link">
        <a data-value="th-TH" href="#">ภาษาไทย</a> |
        <a data-value="en-US" href="#">ENGLISH</a>
    </div>
</div>
<div class="container" style="margin-top:20px">
    <div class="row">
        <div class="col-xs-12 text-center">
            <h3 class="title"><b>@_localizer["แบบติดตามอาการและประเมินความเสี่ยง COVID-19"]</b></h3>
        </div>

    </div>
    <div class="row" style="margin-top:40px">
        <div class="col-md-4  text-center">
            <a href="@Url.Action("Index","RptCovid19Summary")">
                <img src="~/images/report.png" height="200" style="margin-left:auto; margin-right:auto" />
                <h4 class="title-default">@_localizer["รายงานสรุป"]</h4>
            </a>
        </div>
        <div class="col-md-4 text-center">
            <a href="@Url.Action("Index","RptCovid19Ex")">
                <img src="~/images/woman.png" height="200" style="margin-left:auto; margin-right:auto" />
                <h4 class="title-primary">@_localizer["ทำแบบติดตามอาการ"]</h4>
            </a>
        </div>
        <div class="col-md-4 text-center">
            <a href="@Url.Action("Form","Covid19HealthCheck2")">
                <img src="~/images/pneumonia.png" height="200" style="margin-left:auto; margin-right:auto" />
                <h4 class="title-default">@_localizer["ทำแบบประเมินความเสี่ยง"]</h4>
            </a>
        </div>
    </div>
</div>