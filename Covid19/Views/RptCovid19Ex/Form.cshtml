@section scripts {

    <script type="text/javascript">
        $(function () {

              var validator = $("#form").validate({
                rules: {
                    REPORTERS: { required: true },
                    DEPARTURE_DT: { required: true, dateFormat: true, dateMin: { maxDate: '#ARRIVAL_DT' } },
                    ARRIVAL_DT: { required: true, dateFormat: true, dateMax: { minDate: '#DEPARTURE_DT' } },
                    DEPARTURE_DT2: { required: true, dateFormat: true, dateMin: { maxDate: '#ARRIVAL_DT2' } },
                    ARRIVAL_DT2: { required: true, dateFormat: true, dateMax: { minDate: '#DEPARTURE_DT2' } },
                    ARRIVAL_FLIGHT: { maxlength: 10 },
                    ARRIVAL_FLIGHT2: { maxlength: 10},
                    DEPARTURE_FLIGHT: { maxlength: 10 },
                    DEPARTURE_FLIGHT2: { maxlength: 10 },
                    COUNTRY: { required: true },
                    COUNTRY_ID: {
                        required: function () {
                            return $("#COUNTRY_OTHER").is(':checked')
                        }
                    },
                    COUNTRY2: { required: true },
                    COUNTRY_ID2: {
                        required: function () {
                            return $("#COUNTRY_OTHER2").is(':checked')
                        }
                    },
                    HAS_FLU: { required: true },
                    HAS_FLU2: { required: true },
                    COMPANION_NAME1: { maxlength: 100 },
                    COMPANION_NAME2: { maxlength: 100 },
                    COMPANION_NAME3: { maxlength: 100 },
                    TEMPERATURE: {
                        number: true, min: 33, max: 45,
                        required: function () {
                            return $("input[name='HAS_FLU']:checked").val() == "1"
                        }
                    },
                    CLOSE_PATIENT_DETAIL: {
                        maxlength: 500,
                        required: function () {
                            return $("input[name='CLOSE_PATIENT_FLAG']:checked").val() == "true"
                        }
                    },
                     SYMTOMS_OTHER_TEXT: {
                        maxlength: 200,
                        required: function () {
                             return $("input.custom-require-disable1").prop("checked") == true;
                        }
                    },
                      SYMTOMS_OTHER_TEXT_OTHER: {
                        maxlength: 200,
                        required: function () {
                              return $("input.custom-require-disable2").prop("checked") == true;
                        }
                    },
                     SYMTOMS2_OTHER_TEXT: {
                        maxlength: 200,
                        required: function () {
                             return $("input.custom-require-disable3").prop("checked") == true;
                        }
                    }
