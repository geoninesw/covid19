@model Covid19.ViewModels.RptCovid19ExViewModel
@{
    ViewBag.Title = "History";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

    <style>

        #covid-form {
            color: #1d374a;
            font-size: 18px;
            @*background-image: url( @Url.Content("~/images/girl_symp.png") );*@
            background-position: center top;
            background-repeat: no-repeat;
            height: 100%;
            padding: 30px;
        }

    </style>

<div class="container" style="padding:30px">
    <div class="panel panel-default" id="covid-form">
        <div class="panel-body">
            <h3 class="text-center"><label>ประวัติการรายงาน</label></h3>
            <label><u>ข้อมูลผู้รายงาน</u></label>
            <div class="row">
                <div class="col-sm-6">
                    <label>ชื่อ - นามสกุล</label> : @Model.FULLNAME
                </div>
                <div class="col-sm-6">
                    <label>อาชีพ</label> : @Model.JOBDESC
                </div>
            </div>
            @if (Model.HISTORY != null && Model.HISTORY.Count() > 0)
            {
                <hr />
                <label><u>ข้อมูลการเดินทางไปต่างประเทศของตนเอง</u></label>
                <div class="row">
                    <div class="col-sm-6">
                        <label>ประเทศที่เดินทางไปยังหรือแวะผ่าน</label> : @Model.COUNTRY_TXT
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <label>วันที่เดินทางออกจากประเทศไทย</label> : @Model.DEPARTURE_DT_TXT
                    </div>
                    <div class="col-sm-6">
                        <label>เที่ยวบินที่เดินทางไป</label> : @Model.DEPARTURE_FLIGHT
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <label>วันที่เดินทางกลับถึงประเทศไทย</label> : @Model.ARRIVAL_DT_TXT
                    </div>
                    <div class="col-sm-6">
                        <label>เที่ยวบินที่เดินทางกลับ</label> : @Model.ARRIVAL_FLIGHT
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover dataTables-result" style="width:100%">
                                <thead>
                                    <tr>
                                        <th width="20">ลำดับ</th>
                                        <th>วันที่รายงาน</th>
                                        <th style="white-space: nowrap;">อาการไข้ (&#8451;)</th>
                                        <th>อาการอื่น ๆ</th>
                                        <th>สัมผัสผู้ป่วย</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 1;
                                        foreach (var item in Model.HISTORY)
                                        {
                                            <tr>
                                                <td class="text-center">@i</td>
                                                <td>@item.REPORT_DT_TXT</td>
                                                <td>@item.HAS_FLU</td>
                                                <td>@item.SYMTOMS_TXT</td>
                                                <td>@item.CLOSE_PATIENT_FLAG_TXT</td>
                                            </tr>
                                            i++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            @if (Model.HISTORY2 != null && Model.HISTORY2.Count() > 0)
            {
                <hr />

                <label><u>ข้อมูลการเดินทางไปต่างประเทศของบุคคลใกล้ชิด</u></label>
                <div class="row">
                    <div class="col-sm-6">
                        <label>ประเทศที่เดินทางไปยังหรือแวะผ่าน</label> : @Model.COUNTRY_TXT2
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <label>วันที่เดินทางออกจากประเทศไทย</label> : @Model.DEPARTURE_DT_TXT2
                    </div>
                    <div class="col-sm-6">
                        <label>เที่ยวบินที่เดินทางไป</label> : @Model.DEPARTURE_FLIGHT2
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <label>วันที่เดินทางกลับถึงประเทศไทย</label> : @Model.ARRIVAL_DT_TXT2
                    </div>
                    <div class="col-sm-6">
                        <label>เที่ยวบินที่เดินทางกลับ</label> : @Model.ARRIVAL_FLIGHT2
                    </div>
                </div>
                <label>ชื่อผู้เดินทางไปต่างประเทศ</label>
                <div class="row">
                    <div class="col-sm-6">
                        <label>1</label> @Model.COMPANION_NAME1
                    </div>
                    <div class="col-sm-6">
                        <label>เกี่ยวข้องเป็น</label> : @Model.COMPANION_RELATION1
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <label>2</label> @Model.COMPANION_NAME2
                    </div>
                    <div class="col-sm-6">
                        <label>เกี่ยวข้องเป็น</label> : @Model.COMPANION_RELATION2
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <label>3</label> @Model.COMPANION_NAME3
                    </div>
                    <div class="col-sm-6">
                        <label>เกี่ยวข้องเป็น</label> : @Model.COMPANION_RELATION3
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover dataTables-result" style="width:100%">
                                <thead>
                                    <tr>
                                        <th width="20">ลำดับ</th>
                                        <th>วันที่รายงาน</th>
                                        <th>อาการไข้</th>
                                        <th>อาการอื่น ๆ</th>
                                        @*<th>สัมผัสผู้ป่วย</th>*@
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int x = 1;
                                        foreach (var item in Model.HISTORY2)
                                        {
                                            <tr>
                                                <td class="text-center">@x</td>
                                                <td>@item.REPORT_DT_TXT</td>
                                                <td>@item.HAS_FLU</td>
                                                <td>@item.SYMTOMS_TXT</td>
                                                @*<td>@item.CLOSE_PATIENT_FLAG_TXT</td>*@
                                            </tr>
                                            x++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            @if (Model.HISTORY_NO_TRAVEL != null && Model.HISTORY_NO_TRAVEL.Count() > 0)
            {
                <hr />
                <label><u>รายงานสุขภาพประจำวัน กรณีไม่ได้เดินทางไปต่างประเทศ</u></label>

                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover dataTables-result" style="width:100%">
                                <thead>
                                    <tr>
                                        <th width="20">ลำดับ</th>
                                        <th>วันที่รายงาน</th>
                                        <th style="white-space: nowrap;">อาการไข้ (&#8451;)</th>
                                        <th>อาการอื่น ๆ</th>
                                        <th>สัมผัสผู้ป่วย</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 1;
                                        foreach (var item in Model.HISTORY_NO_TRAVEL)
                                        {
                                            <tr>
                                                <td class="text-center">@i</td>
                                                <td>@item.REPORT_DT_TXT</td>
                                                <td>@item.HAS_FLU</td>
                                                <td>@item.SYMTOMS_TXT</td>
                                                <td>@item.CLOSE_PATIENT_FLAG_TXT</td>
                                            </tr>
                                            i++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            <div class="row">
                <div class="col-sm-12 text-right">
                    <button class="btn btn-default title-default-small" type="button" onclick="window.location.href='@Url.Action("Intro")?id=@Model.PERSON_ID'"><i class="fa fa-chevron-circle-left"></i> ย้อนกลับ</button>
                </div>
            </div>

        </div>
    </div>
</div>


@section scripts {
    <script type="text/javascript">
        $(function () {



        });
    </script>
}

